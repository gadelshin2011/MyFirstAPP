<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration">

    <EditText
        android:id="@+id/twEditLogin"
        android:layout_width="@dimen/widthButton"
        android:layout_height="@dimen/heightButton"
        android:hint="Login"
        app:layout_constraintVertical_bias="0.500"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/twEditPassword"
        android:layout_width="@dimen/widthButton"
        android:layout_height="@dimen/heightButton"
        android:hint="Password"
        app:layout_constraintVertical_bias="0.140"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="@+id/twEditLogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/buttonRegistration"
        android:layout_width="@dimen/widthButton"
        android:layout_height="@dimen/heightButton"
        android:text="Registration"
        android:onClick="onClickBackMain"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintVertical_bias="0.800"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>